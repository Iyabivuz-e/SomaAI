# Application Settings
APP_NAME=SomaAI
VERSION=0.1.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database
# Use postgresql+asyncpg for production
DATABASE_URL=postgresql+asyncpg://somaai:somaai@localhost:5432/somaai

# Redis / Cache
REDIS_URL=redis://localhost:6379/0
REDIS_JOBS_URL=redis://localhost:6379/1
REDIS_CACHE_URL=redis://localhost:6379/2
# REDIS_PASSWORD=secret
RESPONSE_CACHE_MIN_CONFIDENCE=0.7

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=secret
QDRANT_COLLECTION_NAME=somaai_documents

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
# GDRIVE_CREDENTIALS_PATH=credentials.json
# GDRIVE_FOLDER_id=folder_id

# Background Jobs
QUEUE_BACKEND=redis

# LLM Provider Configuration
# Options: mock, groq, openai, huggingface
LLM_BACKEND=mock

# Groq
GROQ_API_KEY=gsk_...
GROQ_MODEL=""

# OpenAI
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4-turbo

# HuggingFace
# HUGGINGFACE_API_KEY=hf_...
# HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# Security
REQUIRE_API_KEY=false
